{
  "include": [
    "src/**/*.ts",   "src/**/*.js"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "types",
    "target": "es2022",
    "module": "nodenext",
    "lib": ["es2017", "es7", "es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "coverage"
  ]
}
